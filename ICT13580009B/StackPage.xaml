                        BackgroundColor="Red"
                        WidthRequest="100" />
                    <Button
                        Text="Button"
                        BackgroundColor="Fuchsia"
                        WidthRequest="100" />
                    <Button
                        Text="Button"
                        BackgroundColor="Silver"
                        WidthRequest="100" />
                    <Button
                        Text="Button"
                        BackgroundColor="Yellow"
                        WidthRequest="100" />
                </StackLayout>
            </ScrollView>
            <Entry
                Placeholder="Input text here" />
            <Entry
                Placeholder="Input text here" />
            <Entry
                Placeholder="Input text here" />
            <Entry
                Placeholder="Input text here" />
